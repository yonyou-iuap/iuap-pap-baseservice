    <pluginRepositories>
        <pluginRepository>
            <id>maven-net-cn</id>
            <name>Maven China Mirror</name>
            <url>http://maven.net.cn/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>


    <modules>
        <!--<module>depracated/persistence</module>-->
        <!--<module>depracated/service</module>-->
        <!--<module>depracated/controller</module>-->
        <!--<module>depracated/entity</module>-->
        <!--<module>depracated/i18n</module>-->
        <module>bpm</module>
        <module>ref</module>
        <module>association</module>
        <module>print</module>
        <module>multitenant</module>
        <module>intg</module>
        <module>statistics</module>
        <module>core</module>
    </modules>
    <distributionManagement>
        <snapshotRepository>
            <id>iUAP-Snapshots</id>
            <name>iUAP-Snapshots</name>
            <url>http://maven.yonyou.com/nexus/content/repositories/iUAP-Snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>iUAP-Stagings</id>
            <name>iUAP-Stagings</name>
            <url>http://maven.yonyou.com/nexus/content/repositories/iUAP-Stagings/</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>

                <artifactId>maven-source-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <!-- buildnumber插件,用于简化小版本发布过程 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Build>$\{buildNumber}</Implementation-Build>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>